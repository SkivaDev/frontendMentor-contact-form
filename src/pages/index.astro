---
import '../styles/globals.css'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<main class="w-full">
			<section aria-labelledby="form section" class="w-full h-full mt-[130px] px-[20px]">
				<form action="" class="max-w-[735px] w-full mx-auto px-[40px] py-[32px]">
					<h2 class="text-[30px] font-medium">Contact Us</h2>
					<fieldset class="flex justify-between gap-[16px] mt-[25px] w-full">
						<legend class="sr-only">Personal Information</legend>
						<div class="flex-1 w-full">
							<label for="firstName">First Name <span>*</span></label>
							<input type="text" id="firstName" name="firstName" class="block w-full px-[18px] py-[13px] mt-[8px] border border-black rounded-lg"/>
						</div>
						<div class="flex-1 w-full">
							<label for="lastName">Last Name <span>*</span></label>
							<input type="text" id="lastName" name="lastName" class="block w-full px-[18px] py-[13px] mt-[8px] border border-black rounded-lg"/>
						</div>
					</fieldset>
					<fieldset class="mt-[23px] w-full">
						<legend class="sr-only">Contact Information</legend>
						<label for="email">Email Address <span>*</span></label>
						<input type="email" id="email" name="email"  class="block w-full px-[18px] py-[13px] mt-[8px] border border-black rounded-lg"/>
					</fieldset>
					<fieldset class="mt-[23px] w-full">
						<legend>Query Type</legend>
						<div class="flex justify-between gap-[16px] mt-[7px] w-full">
							<div class="flex-1 w-full flex items-center gap-[18px] px-[27px] py-[11px] mt-[8px] border border-black rounded-lg">
								<input type="radio" id="generalEnquiry" name="generalEnquiry" class="scale-[1.4]">
								<label for="generalEnquiry" class="text-[18px]">General Enquiry</label>
							</div>
							<div class="flex-1 w-full flex items-center gap-[18px] px-[27px] py-[11px] mt-[8px] border border-black rounded-lg">
								<input type="radio" id="supportRequest" name="supportRequest" class="scale-[1.4]">
								<label for="supportRequest" class="text-[18px]">Support Request</label>
							</div>
						</div>
					</fieldset>
					<fieldset class="mt-[25px] w-full">
						<legend class="sr-only">Message</legend>
						<label for="message">Message:</label>
						<textarea id="message" name="message" rows="3" class="block w-full px-[18px] py-[13px] mt-[8px] border border-black rounded-lg"></textarea>
					</fieldset>
					<fieldset class="flex gap-[20px] mt-[44px] ml-[5px] w-full">
						<legend class="sr-only">Consent</legend>
						<input type="checkbox" name="checkbox" id="checkbox" class="scale-[1.4]">
						<label for="checkbox" class="text-[18px] tracking-[-0.9px]">I consent to being contacted by the team <span>*</span></label>
					</fieldset>
					<button type="submit" class="mt-[37px] w-full px-[18px] py-[17px] rounded-[9px] text-[17px] font-bold bg-red">Submit</button>
				</form>
			</section>
		</main>
	</body>
</html>
